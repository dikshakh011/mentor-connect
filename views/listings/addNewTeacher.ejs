<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Teacher</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
</head>
<body>
    <h1 class="offset-3 mt-5 ">Add New Teacher :</h1>

    <form action="/home/adminLogin/adminPage/addNewTeacher" method="post">

<div class="row cols col-6 offset-3 mt-4">

    <div class="mb-3">

        <label for="Name" class="form-label" > Name Of The Teacher</label>
        <input type="text" class="form-control" placeholder="Enter FirstName & LastName" name="teacher[name]" required>
        
    </div>

   
        <div class="mb-3 col-6">
            <label for="Teacher ID" class="form-label">Teacher ID</label>
            <input type="text" class="form-control" placeholder=" Enter Teacher ID" name="teacher[teacherid]" required>

       

        
    </div>



    <div class="mb-3 col-6">
        
        <label for="Department" class="form-label" >Department</label>
        <select class="form-select" aria-label="Department" name="teacher[department]">
            <option selected>CSE</option>
            <option value="AIML">AIML</option>
            <option value="IT">IT</option>
            <option value="Data Science">Data Science</option>
            <option value="BBA">BBA</option>
            <option value="MBA">MBA</option>
          </select>
       
        
    </div>

    <div class="row">

    <div class="mb-3 col-6">
        <label for="Year Of Joining" class="form-label">Year Of Joining</label>
        <input type="number" class="form-control" placeholder=" Enter Year" name="teacher[joiningdate]" required>

    </div>



   
     <div class="mb-3 col-6">
            <label for="Email Id" class="form-label">Email Id</label>
            <input type="email" class="form-control" placeholder=" Enter Email Id" name="teacher[Username]" required>

      

       


    </div>

</div>


<div class="row">


   

        <div class="mb-3 col">
            <label for="Mobile No" class="form-label">Mobile No</label>
            <input type="number" class="form-control" placeholder=" Enter Mobile Number" name="teacher[mobilenumber]" required >

        </div>
 

   
        <div class="mb-3 col-6">
            <label for="Gender" class="form-label">Select Gender</label>
            <select class="form-select" aria-label="Gender" name="teacher[gender]">
                <option selected>Select Gender</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Transgender">Transgender</option>
                
              </select>
           
        </div>
  </div>

  <div class="row">


        <div class="mb-3 col-6">
            <label for="DOB" class="form-label">D.O.B</label>
            <input type="date" class="form-control" placeholder=" Enter DOB" name="teacher[dob]" id="dob" required >

        </div>


        <div class="mb-3 col">
            <label for="Assign Password" class="form-label">Assign Password To Teacher For Login</label>
            <input type="text" class="form-control" placeholder=" Enter Password" name="teacher[Password]" id="password"   required>

        </div>
        <script>
          document.getElementById('dob').addEventListener('input', function () {
              const dob = this.value;
              document.getElementById('password').value = dob;
          });
      </script>

        </div>


        

       

        <div class="mb-3 col-6">
            <label for="Address" class="form-label">Enter Teacher Address</label>
            <textarea name="teacher[address]" class="form-control" rows="6" cols="50" placeholder="Enter Address" required></textarea>
        </div>

       

    </div>


  <button class="btn btn-danger offset-6">Submit</button>

</form>

<% if (typeof error !== 'undefined' && error) { %>
    <div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title text-danger" id="errorModalLabel">Error</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <%= error %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
    <script>
      window.onload = function() {
        var errorModal = new bootstrap.Modal(document.getElementById('errorModal'));
        errorModal.show();
      };
    </script>
  <% } %>
  
  <% if (typeof success !== 'undefined' && success) { %>
    <div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title text-success" id="successModalLabel">Success</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <%= success %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
    <script>
      window.onload = function() {
        var successModal = new bootstrap.Modal(document.getElementById('successModal'));
        successModal.show();
      };
    </script>
  <% } %>

<script
src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
crossorigin="anonymous"
></script>
    
</body>
</html>