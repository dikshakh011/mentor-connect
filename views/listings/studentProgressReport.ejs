<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Progress Report</title>
    <style>
        /* General Styling */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 20px;
            text-align: center;
        }

        h2 {
            color: #333;
            margin-bottom: 20px;
        }

        .table-container {
            width: 100%;
            overflow-x: auto;
        }

        table {
            width: 90%;
            max-width: 800px;
            margin: 0 auto;
            border-collapse: collapse;
            background: white;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
        }

        th, td {
            padding: 12px;
            border-bottom: 1px solid #ddd;
            text-align: center;
        }

        th {
            background-color: #007bff;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tr:hover {
            background-color: #e6f2ff;
        }

        /* Status Colors */
        .status {
            font-weight: bold;
            color: white;
            padding: 5px 10px;
            border-radius: 5px;
            display: inline-block;
            min-width: 80px;
        }

        .pending { background-color: #ffc107; } /* Yellow */
        .verified { background-color: #28a745; } /* Green */
        .rejected { background-color: #dc3545; } /* Red */

        /* Total Credits */
        .total-credits {
            font-size: 18px;
            font-weight: bold;
            margin-top: 20px;
            color: #333;
        }

    </style>
</head>
<body>

    <h2>Progress Report of <%= studentName %></h2>

    <div class="table-container">
        <h3>MAR Documents</h3>
        <table>
            <tr>
                <th>File Name</th>
                <th>View</th>
                <th>Credits</th>
                <th>Status</th>
            </tr>
            <% let totalMarCredits = 0; %>
            <% pdfMarFiles.forEach((doc, index) => { %>
                <% 
                    let statusClass = "pending"; 
                    let statusText = "Pending"; 
                    if (marPoints[index] === 0 || marPoints[index]<-1) {
                        statusClass = "rejected";
                        statusText = "Rejected";
                    } else if (marPoints[index] > 0) {
                        statusClass = "verified";
                        statusText = "Verified";
                        totalMarCredits += marPoints[index]; // Only count verified credits
                    }
                %>
                <tr>
                    <td><%= doc.split("/").pop() %></td>
                    <td><a href="<%= doc %>" target="_blank" class=" status <%= statusClass%>">View</a></td>
                    <td><%= marPoints[index] > 0 ? marPoints[index] : (marPoints[index]== -1)? "null" : "Rejected" %></td>
                    <td><span class="status <%= statusClass %>"><%= statusText %></span></td>
                </tr>
            <% }) %>
        </table>
        <br><br>
        <!-- <%= totalMarCredits >= 25 ? 'status verified': 'status rejected' %> -->
        <p class="total-credits ">Total Verified MAR Credits: <%= totalMarCredits %></p>
        <br>
        <hr>
        <h3>MOOCs Documents</h3>
        <table>
            <tr>
                <th>File Name</th>
                <th>View</th>
                <th>Credits</th>
                <th>Status</th>
            </tr>
            <% let totalMoocsCredits = 0; %>
            <% pdfMoocsFiles.forEach((doc, index) => { %>
                <% 
                    let statusClass = "pending"; 
                    let statusText = "Pending"; 
                    if (moocsPoints[index] === 0) {
                        statusClass = "rejected";
                        statusText = "Rejected";
                    } else if (moocsPoints[index] > 0) {
                        statusClass = "verified";
                        statusText = "Verified";
                        totalMoocsCredits += moocsPoints[index]; // Only count verified credits
                    }
                %>
                <tr>
                    <td><%= doc.split("/").pop() %></td>
                    <td><a href="<%= doc %>" target="_blank" class="status <%= statusClass%>">View</a></td>
                    <td><%= moocsPoints[index] > 0 ? moocsPoints[index] : (moocsPoints[index]== -1)? "null" : "Rejected" %></td>
                    <td><span class="status <%= statusClass %>"><%= statusText %></span></td>
                </tr>
            <% }) %>
        </table>
         <br><br>
        <p class="total-credits">Total Verified MOOCs Credits: <%= totalMoocsCredits %></p>
    </div>

    
   

</body>
</html>
