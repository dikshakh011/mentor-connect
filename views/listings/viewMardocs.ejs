<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MAR Documents</title>
    <style>
        body {
            position: relative;
            font-family: Arial, sans-serif;
            text-align: center;
            margin: 20px;
            background: linear-gradient(to right, #ffcccc, #ff6666);
            color: black;
        }
        table {
            width: 80%;
            margin: 40px auto;
            border-collapse: collapse;
            background: white;
            color: black;
        }
        th, td {
            border: 1px solid black;
            padding: 10px;
            text-align: left;
        }
        th {
            background: #ff6666;
            color: white;
        }
        a {
            text-decoration: none;
            color: black;
            &:hover{
                color:#ff6666;
            }
        }

        div{
            position:absolute;
            top:1rem;
            border: 0.1rem solid pink;
            margin-top: 1rem;
            margin-bottom:1rem;
            left:50%;
            transform:translate(-50%,50%);
            text-align: center;
            width:8.5rem;
            background-color: aliceblue;
        }
        button {
            background: linear-gradient(to right, #ff5733, #ff0000);
            border: none;
            padding: 10px 15px;
            color: white;
            cursor: pointer;
            border-radius: 5px;
            font-size: 16px;
        }
        button:hover {
            background: linear-gradient(to right, #ff0000, #990000);
        }
    </style>
</head>
<body>
    <h2>View Uploaded MAR Documents</h2>
    <div>Year: 4th (final)</div>
    <table>
        <thead>
            <tr>
                <th>File Name</th>
                <th>Activity Category</th>
                <th>Date of Certificate</th>
                <th>View</th>
                
            </tr>
        </thead>
        <tbody>
<% 
  const arr = ['Tech Quiz', 'Student Chapter', 'Tree Plantation', 'College Sport']; 
  const date = ['07-03-2025', '09-03-2025', '22-04-2025', '21-10-2024']; 
  pdfFiles.forEach((fileUrl, index) => { 
%>
  <tr>
    <td><%= fileUrl.split("/").pop() %></td>
    <td><%= arr[index] %></td>
    <td><%= date[index] %></td>
    <td><a href="<%= fileUrl %>" target="_blank">Open PDF</a></td>
  </tr>
<% }); %>

        </tbody>
    </table>
</body>
</html>
