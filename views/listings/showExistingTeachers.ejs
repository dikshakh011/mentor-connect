<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Teachers List</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #f8f9fa;
        padding: 2rem;
      }

      .table-header {
        background: linear-gradient(to right, #003366, #004080);
        color: white;
        padding: 1.2rem 2rem;
        border-radius: 0.5rem 0.5rem 0 0;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }

      .table-header h2 {
        margin: 0;
        font-weight: 600;
      }

      .custom-table-container {
        overflow-x: auto;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
        border-radius: 0 0 0.5rem 0.5rem;
      }

      thead th {
        background-color: #022d58 !important;
        color: #ffffff !important;
        vertical-align: middle;
      }

      tbody tr {
        vertical-align: middle;
      }

      .btn-danger {
        padding: 0.3rem 0.8rem;
      }
    </style>
  </head>
  <body>

    <div class="container-fluid">
      <div class="table-header">
        <h2>Teachers List</h2>
      </div>

      <div class="custom-table-container">
        <table class="table table-bordered table-hover table-striped mb-0">
          <thead>
            <tr>
              <th scope="col">Serial</th>
              <th scope="col">Name</th>
              <th scope="col">Teacher ID</th>
              <th scope="col">Department</th>
              <th scope="col">Mobile No</th>
              <th scope="col">Gender</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>

          <tbody>
            <% for(let Teacher of listOfTeachers) { %>
            <tr>
              <th scope="row"><%= count++ %></th>
              <td><%= Teacher.name %></td>
              <td><%= Teacher.teacherid %></td>
              <td><%= Teacher.department %></td>
              <td><%= Teacher.mobilenumber %></td>
              <td><%= Teacher.gender %></td>
              <td>
                <form action="/home/adminLogin/adminPage/showExistingTeachers/<%= Teacher._id %>">
                  <button class="btn btn-danger btn-sm">Show More</button>
                </form>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

  </body>
</html>
